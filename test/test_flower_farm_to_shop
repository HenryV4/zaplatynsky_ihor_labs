import unittest
import sys
sys.path.append('C:/WORK/PROG/2/lab/src')
from flower_farm_to_shop import calculate_max_flow

class TestMaxFlow(unittest.TestCase):
    def test_max_flow_roads_csv(self):
        expected_max_flow = 51
        actual_max_flow = calculate_max_flow('roads.csv')
        self.assertEqual(actual_max_flow, expected_max_flow)
    def test_max_flow_no_way(self):
        expected_max_flow = 0
        actual_max_flow = calculate_max_flow('roads_no_way.csv')
        self.assertEqual(actual_max_flow, expected_max_flow)
if __name__ == '__main__':
    unittest.main()